{
  "name": "@xigua/xg-monorepo",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "keywords": [],
  "scripts": {
    "create": "pnpm  --filter='./packages/create-project' run create --targetDir=frontend",
    "create:bk": "pnpm  --filter='./packages/create-project' run create --targetDir=backend",
    "test": "pnpm -C backend/manage-back run dev",
    "dev": "pnpm -r --parallel --filter './frontend/*' --filter './backend/*' run dev",
    "dev:frontend": "pnpm -r --parallel --filter='./frontend/*' run dev",
    "dev:backend": "pnpm -r --parallel --filter='./backend/*' run dev",
    "build:all": "nx run-many --target=build --all --parallel",
    "build:affected": "nx affected --target=build --parallel --base=HEAD~1 --head=HEAD",
    "deploy:frontend:github": "nx affected --target=deploy:github --parallel",
    "clear:cache": "nx reset",
    "clear:modules": "rimraf node_modules",
    "clear:all": "pnpm -r --parallel run clear:modules && echo 'clear finish'",
    "prepare": "husky && pnpm  --filter='./packages/create-project' run build",
    "commit": "cz",
    "commit-test": "echo 'hello'"
  },
  "author": "xigua",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.2",
    "@sentry/vue": "^8.26.0",
    "axios": "^1.7.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "nprogress": "^0.2.0",
    "pinia": "^2.2.2",
    "qiankun": "^2.10.16",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "vue": "^3.4.37",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.10",
    "@nx/eslint": "19.5.7",
    "@nx/js": "^19.6.1",
    "@nx/vite": "19.5.7",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.7.14",
    "@swc/types": "^0.1.12",
    "@types/cross-spawn": "^6.0.6",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/nprogress": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "commitizen": "^4.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.5",
    "nx": "19.5.7",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-qiankun": "^1.0.15"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit $1"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}

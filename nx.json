{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist/build"
      ],
      "cache": true
    },
    "start": {
      "dependsOn": [
        "^start"
      ],
      "outputs": [
        "{projectRoot}/dist/start"
      ],
      "cache": true
    },
    "dev": {
      "dependsOn": [
        "^dev"
      ],
      "outputs": [
        "{projectRoot}/dist/dev"
      ],
      "cache": true
    }
  },
  "defaultBase": "main",
  "parallel": 4,
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ],
  "release": {
    "projects": ["frontend/*"],
    "version": {
      "conventionalCommits": {
        "types": {
          "docs": false
        }
      }
    },
    "git": {
      "commit": true,
      "tag": true,
      "commitMessage": "chore(release): {version}"
    },
    "changelog":{
      "workspaceChangelog": {
        "createRelease": "github"
      },
      "projectChangelogs": true
    }
  }
}
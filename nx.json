{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist/build"
      ],
      "cache": true
    },
    "start": {
      "dependsOn": [
        "^start"
      ],
      "outputs": [
        "{projectRoot}/dist/start"
      ],
      "cache": true
    },
    "dev": {
      "dependsOn": [
        "^dev"
      ],
      "outputs": [
        "{projectRoot}/dist/dev"
      ],
      "cache": true
    },
   "release-version": {
      "executor": "@nx/js:release-version",
      "options": {
        "skipTag": false,
        "skipCommit": false,
        "skipPush": false,
        "commitMessage": "chore(release): bump version to {version}",
        "tagPrefix": "v",
        "push": true
      }
    }
  },
  "defaultBase": "main",
  "parallel": 4,
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ],
  "release": {
    "projects": ["frontend/*"],
    "projectsRelationship": "independent",
    "version": {
      "independent": true,
      "generatorOptions": {
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits",
        "fallbackCurrentVersionResolver": "disk"
      },
      "git": {
        "commit": true,
        "tag": true,
        "commitMessage": "chore(release): {version} [skip ci]"
      }
    },
    "conventionalCommits": {
      "types": {
        "feat": {
          "semverBump": "patch"
        },
        "fix": {
          "semverBump": "patch"
        },
        "chore": {
          "semverBump": "patch"
        }
      }
    },
    "changelog":{
      "workspaceChangelog": {
        "createRelease": "github"
      },
      "filename": "CHANGELOG.md",
      "header": "# 项目变更日志",
      "projectChangelogs": true
    }
  }
}